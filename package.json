{
  "name": "@t8/promisify-polling",
  "version": "1.0.7",
  "description": "Convert a polling to an easier-to-handle async function",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx npm-run-all cleanup compile",
    "cleanup": "node -e \"require('fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx npm-run-all compile:src compile:tests",
    "compile:src": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "compile:tests": "npx esbuild tests.ts --bundle --outdir=dist --platform=neutral",
    "prepublishOnly": "npx npm-run-all build test",
    "preversion": "npx npm-run-all typecheck shape build test",
    "shape": "npx codeshape",
    "test": "node dist/tests.js",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/promisify-polling.git"
  },
  "keywords": [
    "polling",
    "promise",
    "promisify",
    "async"
  ],
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
