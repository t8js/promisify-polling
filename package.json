{
  "name": "@t8/promisify-polling",
  "version": "1.0.9",
  "description": "Convert a polling to an easier-to-handle async function",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "preversion": "npx npm-run-all clean shape compile test",
    "shape": "npx codeshape --typecheck --emit-types",
    "test": "node tests.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/promisify-polling.git"
  },
  "keywords": [
    "polling",
    "promise",
    "promisify",
    "async"
  ],
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0"
  }
}
